%h1{ id: 'titulo-grao' }
  = @grao.titulo

.grao
  - if @grao.tipo == 'files'
    = render 'graos/show_tabela'
  - else
    = render 'graos/show_imagem'

= link_to "Download" , grao_baixar_grao_path(@grao)
%br
= link_to 'Adicionar à Cesta de Grãos', adicionar_a_cesta_grao_path(@grao), method: :put, remote: true
- if current_usuario
  = link_to "Adicionar à Estante", favoritar_grao_path(@grao), method: :put
